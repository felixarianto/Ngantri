<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:gravity="center_vertical"
    android:background="?selectableItemBackgroundBorderless">

    <android.support.v7.widget.CardView
        android:id="@+id/crd_photo"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_margin="4dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="0dp">

        <ImageView
            android:id="@+id/img_photo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:background="@drawable/ic_location"
            android:backgroundTint="@color/grey_10"/>

    </android.support.v7.widget.CardView>
    


    <LinearLayout
        android:id="@+id/lyt_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        android:visibility="visible"
        android:gravity="center"
        android:layout_marginRight="8dp">

        <LinearLayout
            android:id="@+id/lyt_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:visibility="gone">

            <TextView
                android:id="@+id/txt_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textSize="24sp"
                android:text="0"
                android:maxLines="1"
                android:gravity="center"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                android:text="antrian"
                android:padding="4dp"
                />

        </LinearLayout>


        <TextView
            android:id="@+id/txt_closed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:text="TUTUP"
            android:padding="4dp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_toRightOf="@+id/crd_photo"
        android:layout_toLeftOf="@+id/lyt_status"
        android:layout_centerVertical="true"
        android:layout_marginLeft="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:ellipsize="end"
            android:text="Nama Tempat"/>

        <TextView
            android:id="@+id/txt_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:ellipsize="end"
            android:text="..."/>

        <TextView
            android:id="@+id/txt_hour"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            android:drawablePadding="4dp"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:ellipsize="end"
            android:text="Buka ... s/d ...."
            />

        <TextView
            android:id="@+id/txt_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            android:drawablePadding="4dp"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:ellipsize="end"
            android:text="Jl. ...."/>

    </LinearLayout>

</RelativeLayout>
