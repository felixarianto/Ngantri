<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="2dp">

    <View
        android:id="@+id/vw_angle"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignRight="@+id/crd_lyt"
        android:layout_alignTop="@+id/crd_lyt"
        android:background="@color/overlay_light_blue_300"/>

    <android.support.v7.widget.CardView
        android:id="@+id/crd_lyt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="8dp"
        android:layout_alignParentRight="true"
        app:cardCornerRadius="10dp"
        app:cardElevation="0dp"
        app:cardBackgroundColor="@color/overlay_light_blue_300">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="4dp"
            android:paddingBottom="6dp"
            android:paddingLeft="9dp"
            android:paddingRight="9dp"
            >

            <LinearLayout
                android:id="@+id/lyt_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:minWidth="60dp">

                <ImageView
                    android:id="@+id/img_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    />

                <TextView
                    android:id="@+id/txt_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:gravity="center_vertical"
                    android:textColor="#000000"/>

            </LinearLayout>

            <TextView
                android:id="@+id/txt_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                android:text="00:00"
                android:drawableRight="@drawable/ic_delivered"
                android:drawableTint="@color/grey_60"
                android:textColor="@color/grey_60"
                android:drawablePadding="4dp"
                android:layout_alignBottom="@+id/lyt_content"
                android:layout_alignRight="@+id/lyt_content"
                />

        </RelativeLayout>

    </android.support.v7.widget.CardView>



</RelativeLayout>
