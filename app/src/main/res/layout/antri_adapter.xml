<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:background="?selectableItemBackgroundBorderless">

    <android.support.v7.widget.CardView
        android:id="@+id/crd_photo"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_margin="4dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="0dp">

        <ImageView
            android:id="@+id/img_photo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:background="@drawable/ic_location"
            android:backgroundTint="@color/grey_10"/>

    </android.support.v7.widget.CardView>

    <LinearLayout
        android:layout_toRightOf="@+id/crd_photo"
        android:layout_toLeftOf="@+id/lyt_status"
        android:layout_centerVertical="true"
        android:layout_marginLeft="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txt_time"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                android:gravity="center"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:maxLines="1"
                android:ellipsize="end"
                android:text="00:00"/>

            <TextView
                android:id="@+id/txt_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:ellipsize="end"
                android:text="Nama Tempat"
                android:layout_toLeftOf="@+id/txt_time"/>

        </RelativeLayout>

        <TextView
            android:id="@+id/txt_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:ellipsize="end"
            android:text="Jl. ...."
            android:visibility="visible"/>

        <TextView
            android:id="@+id/txt_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No."
            android:singleLine="true"
            android:ellipsize="start"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textSize="24sp"
            android:gravity="center_vertical"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <Button
                android:id="@+id/btn_loc"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:drawableLeft="@drawable/ic_near_me"
                android:drawableTint="@color/colorPrimary"
                android:textColor="@color/selector_primary"
                android:text="Lokasi"
                android:textSize="10dp"
                android:textAlignment="textStart"
                android:drawablePadding="12dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:background="@android:color/transparent"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:textAllCaps="false"/>

            <Button
                android:id="@+id/btn_forum"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:drawableLeft="@drawable/ic_forum"
                android:drawableTint="@color/colorPrimary"
                android:textColor="@color/selector_primary"
                android:text="Chat"
                android:textSize="10dp"
                android:textAlignment="textStart"
                android:drawablePadding="12dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:background="@android:color/transparent"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:textAllCaps="false"
                android:layout_toRightOf="@+id/btn_loc"/>


            <ImageButton
                android:id="@+id/btn_more"
                android:layout_width="40dp"
                android:layout_height="28dp"
                android:cropToPadding="true"
                android:padding="4dp"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/ic_more_horiz"
                android:tint="@color/selector_primary"
                android:background="@android:color/transparent"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                />

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>
